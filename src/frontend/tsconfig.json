{
    "compilerOptions": {
        "outDir": "../../dist/frontend",
        "sourceMap": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "strict": true,
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
				"noUnusedLocals": true,
				"noUnusedParameters": true,
        "downlevelIteration": true,
				"lib": [
					"es2017",
					"dom"
				]
    },
    "include": [
        "./**/*"
    ],
		"exclude": [
			"**/*.test.*"
		]
}
